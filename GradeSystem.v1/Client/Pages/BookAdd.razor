@page "/Book"
@page "/Book/{QR:int}"
@using Microsoft.AspNetCore.Http;
@inject BookService BookService
@inject NavigationManager NavigationManager


<h3>BookAddEdit</h3>

@if (QR == null)
{
    <PageTitle>Add new Book</PageTitle>
    <h3>Add new Book</h3>
}
else
{
    <PageTitle>Edit @book.QRCode </PageTitle>
    <h3>Edit @book.QRCode </h3>
}

<EditForm Model="book" OnSubmit="HandleSubmit">
    <div>
        <label for="Title">Title</label>
        <InputText id="Title" @bind-Value="book.BookType.Title" class="form-control"></InputText>
    </div>
    <div>
        <label for="Author">Author</label>
        <InputText id="Author" @bind-Value="book.BookType.Author" class="form-control"></InputText>
    </div>
    <div>
        <label for="Author">Author</label>
        <InputText id="Author" @bind-Value="book.BookType.Author" class="form-control"></InputText>
    </div>
   
    
    <br />
    <button type="submit" class="btn btn-primary">@btnText</button>
    <button type="button" class="btn btn-danger" @onclick="DelateBook">Delete Book</button>

</EditForm>
<label for="Img">Img</label>
<InputFile multiple />
@message
@code {
    [Parameter]
    public int? QR { get; set; }

    Book book = new Book();
    string btnText = string.Empty;
    string message = string.Empty;

    // wyswietla teks save albo update w zaleznosci od tego czy wchodzi sie tu z QR czy bez
    protected override async Task OnInitializedAsync()
    {
        btnText = QR == null ? "Save New Book" : "Update Book";
        await BookService.GetBooks();
    }

    //wyświetla dane ksiażki jeżeli jest kod QR
    protected override async Task OnParametersSetAsync()
    {
        if (QR == null)
        {

        }
        else
        {
            book = await BookService.GetBookByQR((int)QR);
        }
    }

    //jezeli nie ma danych (QR) tworzy nowa ksiazke z wpusanych danych jezeli jest QR updatuje dana ksiazke z wpisanych danych 
    async Task HandleSubmit()
    {
        if (QR == null)
        {
            book.IsBoocked = false;
            book.IsBoocked = false;
            await BookService.CreateBook(book);


        }
        else
        {
            await BookService.UpdateBook(book);
        }

        NavigationManager.NavigateTo("/Library");

    }

    //Usuwa ksiazke z podanychm kodem qr z bazy danych 
    async Task DelateBook()
    {

        await BookService.DeleteBook(book.QRCode);
        NavigationManager.NavigateTo("/Library");
    }

    // Nie mam pojecia 
    private void OnInputFileChange(InputFileChangeEventArgs e)
    {
        var selectedFiles = e.GetMultipleFiles();
        message = $"{selectedFiles.Count} file(s) selected";
        this.StateHasChanged();
        
    }
}