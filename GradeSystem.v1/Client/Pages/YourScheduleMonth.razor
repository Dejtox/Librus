@page "/yourschedulemonth"

@inject IStudentService StudentService
@inject IEventService EventService
@inject NavigationManager NavigationManager



<div class="mainbox">
    <div class="Msidebox1">
        <div class="Msubsidebox1">
            <div class="Msubsidebox1date">
                
                <div class="Msubsidemonthyear">
                    <div class="gg-chevron-left"></div>
                    <div>@Today.ToString("MMMM") @Today.Year</div>
                    <div class="gg-chevron-right"></div>
                </div>
                
                <select class="Mchangemodes" @onchange="NavigateToPage">
                    <option selected>Month<div class="gg-chevron-down"></div></option>
                    <option value="/yourscheduleweek">Week<div class="gg-chevron-down"></div></option>
                </select>

            </div>


            <div class="Mdays">
                <div class="Mday" style="margin-left: 2%">
                    <div class="Mdayhead">Monday</div>
                    @for(int i=1 ; i<6 ; i++)
                    {
                        <div class="Msingle"></div>
                    }
                </div>
                <div class="Mday">
                    <div class="Mdayhead">Tuesday</div>
                    @for (int i = 1; i < 6; i++)
                    {
                        <div class="Msingle"></div>
                    }
                </div>
                <div class="Mday">
                    <div class="Mdayhead">Wednesday</div>
                    @for (int i = 1; i < 6; i++)
                    {
                        <div class="Msingle">
                            @for(int j = 1; j < 32; j++)
                            {
                                int k = j; 
                            }
                        </div>
                    }
                </div>
                <div class="Mday">
                    <div class="Mdayhead">Thursday</div>
                    @for (int i = 1; i < 6; i++)
                    {
                        <div class="Msingle"></div>
                    }
                </div>
                <div class="Mday">
                    <div class="Mdayhead">Friday</div>
                    @for (int i = 1; i < 6; i++)
                    {
                        <div class="Msingle"></div>
                    }
                </div>
                <div class="Mday">
                    <div class="Mdayhead">Saturday</div>
                    @for (int i = 1; i < 6; i++)
                    {
                        <div class="Msingle"></div>
                    }
                </div>
                <div class="Mday" style="margin-right: 2%">
                    <div class="Mdayhead">Sunday</div>
                    @for (int i = 1; i < 6; i++)
                    {
                        <div class="Msingle"></div>
                    }
                </div>
            </div>


        </div>
    </div>


    <div class="Msidebox2">
        <div class="checkboxes">
            <label class="container123">
                Exams
                <input type="checkbox" checked="checked">
                <span class="checkmark checkmark--1"></span>
            </label>

            <label class="container123">
                Events
                <input type="checkbox">
                <span class="checkmark checkmark--2"></span>
            </label>

            <label class="container123">
                Substitutions
                <input type="checkbox">
                <span class="checkmark checkmark--3"></span>
            </label>
        </div>
    </div>

</div>



@code {
    private void NavigateToPage(ChangeEventArgs e)
    {
        var selectedValue = e.Value.ToString();

        if (!string.IsNullOrEmpty(selectedValue))
        {
            NavigationManager.NavigateTo(selectedValue);
        }
    }

    DateTime Today = DateTime.Now;
}
